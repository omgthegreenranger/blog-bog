<div class="row align-center mb-5">
  <div class="col-md-6">
    <!-- Call the helper function with triple brackets to render the span as HTML -->
    <h2>Latest Post</h2>
  </div>
  <div class="col-md-6">
    {{#each blogs}}
    <a href=../blog/{{id}}>
    <div class="blog-title">
      <h3>{{title}}</h3>
    </div>
    <div class="blog-details">
      <h4>{{slugline}}</h4>
    </a>
      <p>Written by: <a href=mailto:{{user.email}}><span>{{user.username}}</span></a> on <span>{{date}}</span>. <span>{{comments.length}} comments</span></p>
    </div>

    {{/each}}
  </div>
</div>